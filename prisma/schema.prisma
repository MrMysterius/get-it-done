generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/GetItDone.db"
}

model User {
  id                    Int     @id @default(autoincrement())
  name                  String  @unique
  password_hash         String
  displayname           String
  role                  String  @default("user")
  last_action_timestamp String?
  active                Boolean
  invited_from          Int?
  invitee               User?   @relation("Invitee", fields: [invited_from], references: [id])
  User                  User[]  @relation("Invitee")
}
